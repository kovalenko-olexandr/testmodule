<config>
    <tabs>
        <mobilunity translate="label" module="mobilunity_sample">
            <label>Mobilunity Ex</label>
            <sort_order>1</sort_order>
        </mobilunity>
    </tabs>
    <sections>
        <mobilunity_options translate="label" module="mobilunity_sample">
            <label>Sample Options</label>
            <tab>mobilunity</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <sample_group translate="label" module="mobilunity_sample">
                    <label>Sample Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enable>
                        <decimal_factor translate="label">
                            <label>Decimal factor</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <validate>validate-not-negative-number</validate>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </decimal_factor>
                    </fields>
                </sample_group>
            </groups>
        </mobilunity_options>
    </sections>
</config>
